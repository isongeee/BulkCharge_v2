# ===== AppFolio V2 (Basic) =====
V2_BASE=https://cymliving.appfolio.com/api/v2/reports
V2_USER=
V2_PASS=

# Optional: comma-separated V2 property IDs (defaults to 8006-8015)
V2_PROPERTY_IDS=

# ===== AppFolio V0 (OAuth client credentials) =====
V0_BASE=https://api.appfolio.com/api/v0
V0_DEV_ID=
V0_CLIENT_ID=
V0_CLIENT_SECRET=

# Bulk charges GL account
BULK_GL_ACCOUNT_ID=

# Filters / display
TABLE_GL_ACCOUNT_NUMBER=4815-000
FILTER_GL_ACCOUNT=4021-000

# Optional: limit the V0 tenant lookup to specific properties (comma-separated UUIDs)
V0_PROPERTY_IDS=


# Optional: late fee rule defaults (used for properties not in hard-coded groups)
LATE_FEE_THRESHOLD=500
LATE_FEE_PERCENT=0.05
LATE_FEE_BASE_FEE=10

# Performance tuning
CACHE_TTL_SECONDS=300
V2_TENANT_COLUMNS_MODE=columns_first
HTTP_POOL_MAXSIZE=10
